---
<section class="py-32 bg-white" id="contact">
  <div class="container mx-auto">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <!-- Left Column - Content -->
        <div>
          <div id="assessment-complete" class="mb-8 p-4 bg-primary/5 rounded-xl border border-primary/10 hidden">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-primary mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-base font-medium text-primary">Assessment Complete!</h3>
                <p class="mt-1 text-sm text-dark-gray/80">Fill in your contact details below to receive your personalized AI readiness report.</p>
              </div>
            </div>
          </div>

          <span class="text-primary font-medium mb-4 block text-sm tracking-wider uppercase">Let's Talk</span>
          <h2 class="text-heading font-medium mb-8 text-secondary">Find Your Ideal Solution</h2>
          <p class="text-dark-gray/80 text-lg mb-12">Schedule a free consultation to discuss your challenges and explore whether AI is the right fit for your business.</p>
          
          <div class="space-y-8">
            {[
              {
                title: "Personalized Guidance",
                description: "Get expert advice tailored to your specific business needs.",
                icon: "M13 10V3L4 14h7v7l9-11h-7z"
              },
              {
                title: "Clear Next Steps",
                description: "Receive actionable recommendations and implementation roadmap.",
                icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
              },
              {
                title: "Ongoing Support",
                description: "Access continued assistance throughout your journey.",
                icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              }
            ].map(feature => (
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={feature.icon} />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-base font-medium text-secondary mb-1">{feature.title}</h3>
                  <p class="text-dark-gray/70 text-sm">{feature.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Right Column - Form -->
        <div class="bg-off-white rounded-2xl p-8">
          <form 
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/success"
          class="space-y-6"
        >
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>
            
            <!-- Assessment data will be included if available -->
            <input type="hidden" name="form-name" value="contact" />
            <input type="hidden" name="bot-field" />
            <input type="hidden" id="assessment-data" name="assessment-data" />
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-secondary mb-2">Name</label>
                <input 
                  type="text" 
                  id="name"
                  name="name" 
                  class="w-full px-4 py-3 rounded-xl bg-white border-0 text-dark-gray focus:ring-2 focus:ring-primary" 
                  required
                >
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-secondary mb-2">Company</label>
                <input 
                  type="text" 
                  id="company"
                  name="company" 
                  class="w-full px-4 py-3 rounded-xl bg-white border-0 text-dark-gray focus:ring-2 focus:ring-primary" 
                  required
                >
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-secondary mb-2">Email</label>
              <input 
                type="email" 
                id="email"
                name="email" 
                class="w-full px-4 py-3 rounded-xl bg-white border-0 text-dark-gray focus:ring-2 focus:ring-primary" 
                required
              >
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-secondary mb-2">What challenges are you looking to solve?</label>
              <textarea 
                id="message"
                name="message" 
                class="w-full px-4 py-3 rounded-xl bg-white border-0 text-dark-gray focus:ring-2 focus:ring-primary h-32" 
                required
              ></textarea>
            </div>

            <div id="form-success" class="hidden bg-green-50 text-green-800 rounded-xl p-4">
              Thanks for reaching out! We'll get back to you soon.
            </div>

            <div id="form-error" class="hidden bg-red-50 text-red-800 rounded-xl p-4">
              Oops! Something went wrong. Please try again.
            </div>
            
            <button 
              type="submit"
              class="w-full bg-primary text-white py-4 rounded-xl font-medium hover:bg-primary/90 transition-colors"
            >
              Schedule Free Consultation
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const assessmentComplete = document.getElementById('assessment-complete');
  const assessmentDataInput = document.getElementById('assessment-data') as HTMLInputElement;
  const form = document.querySelector('form');
  const formSuccess = document.getElementById('form-success');
  const formError = document.getElementById('form-error');
  
  // Check for assessment data
  const answers = sessionStorage.getItem('assessmentAnswers');
  if (answers) {
    assessmentComplete.classList.remove('hidden');
    assessmentDataInput.value = answers;
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    try {
      const formData = new FormData(form);
      const searchParams = new URLSearchParams();
      for (const [key, value] of formData) {
        searchParams.append(key, value.toString());
      }
      
      const response = await fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: searchParams.toString()
      });
      
      if (!response.ok) {
        throw new Error('Form submission failed');
      }

      // Success handling
      form.reset();
      sessionStorage.removeItem('assessmentAnswers');
      assessmentComplete?.classList.add('hidden');
      formSuccess?.classList.remove('hidden');
      setTimeout(() => {
        formSuccess?.classList.add('hidden');
      }, 5000);
    } catch (error) {
      console.error('Error:', error);
      formError?.classList.remove('hidden');
      setTimeout(() => {
        formError?.classList.add('hidden');
      }, 5000);
    }
  });
</script>